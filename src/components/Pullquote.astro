---
// Cspell:words astro
import TextLink from './TextLink.astro';

interface Props {
	alignment: 'center' | 'left';
	author?: string;
	class?: string;
	lang?: string;
	source?: string;
	sourceUrl?: string;
	text: string;
}

const {
	alignment = 'center',
	author,
	class: className,
	lang = 'en',
	source,
	sourceUrl,
	text,
	...props
} = Astro.props;
---

<blockquote
	lang={lang}
	class:list={[
		'pullquote p-9 mbe-10 [text-wrap:balance]',
		{ 'text-center': alignment === 'center', 'text-left': alignment === 'left' },
		className,
	]}
	{...props}
>
	<p set:html={text} />
	{
		(author || source) && (
			<footer class="text-2 font-normal opacity-60 mbs-6">
				{author && <b class="font-normal">{author}</b>}
				{author && source && ', '}
				{source &&
					(sourceUrl ? (
						<cite>
							<TextLink href={sourceUrl}>{source}</TextLink>
						</cite>
					) : (
						<cite>{source}</cite>
					))}
			</footer>
		)
	}
</blockquote>
