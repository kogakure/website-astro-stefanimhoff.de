---
// Cspell:words astro keyof
interface Props {
	as?: keyof astroHTML.JSX.IntrinsicElements;
	class?: string;
	[key: string]: any;
}

const { as: Tag = 'p', class: className, ...props } = Astro.props;
---

<Tag
	class:list={['text-3 font-normal tracking-normal mbe-10 mbs-0 dark:font-light', className]}
	{...props}
>
	<slot />
</Tag>
